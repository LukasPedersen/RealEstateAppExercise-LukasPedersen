<?xml version="1.0" encoding="utf-8" ?>
<Shell Shell.BackgroundColor="#22cfa7" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:RealEstateApp"
       x:Class="RealEstateApp.AppShell"
       xmlns:fa="clr-namespace:FontAwesome">
    <FlyoutItem  FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Propertys" ContentTemplate="{DataTemplate views:PropertyListPage}">
            <ShellContent.Icon>
                <FontImageSource FontFamily="FA-solid"
                                 Glyph="{x:Static fa:IconFont.Home}"/>
            </ShellContent.Icon>
        </ShellContent>
        <ShellContent Title="About" ContentTemplate="{DataTemplate views:AboutPage}" >
            <ShellContent.Icon>
                <FontImageSource FontFamily="FA-solid"
                                 Glyph="{x:Static fa:IconFont.Info}"/>
            </ShellContent.Icon>
        </ShellContent>
    </FlyoutItem>
</Shell>